<% if flash[:notice] %>
    <div class="alert alert-info" role="alert">
        <%= flash[:notice] %>
    </div>
<% end %>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Departamento</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th colspan="2">
        </tr>
    </thead>
    <tbody>
        <%= render @produtos  %>
    </tbody>
</table>
<div class="alert alert-info" role="alert">
